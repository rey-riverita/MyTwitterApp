<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.TimelineActivity">

    <item android:id="@+id/miDirectMessage"
        android:orderInCategory="2"
        android:title="Direct Message"
        android:icon="@drawable/ic_direct_message"
        app:showAsAction="always"
        android:actionViewClass="android.support.v7.widget.SearchView">

    </item>

    <item
        android:id="@+id/miActionProgress"
        android:title="Loading..."
        android:visible="true"
        android:orderInCategory="100"
        app:showAsAction="always"
        app:actionLayout="@layout/action_view_progress" />

    <item
        android:id="@+id/miProfile"
        app:showAsAction="always"
        android:orderInCategory="3"
        android:icon="@drawable/ic_twitter_profile_icon"
        android:title="Profile"
        android:onClick="onProfileView">

    </item>

    <item
        android:id="@+id/miNewTweet"
        android:icon="@drawable/ic_compose_new_tweet_icon"
        android:orderInCategory="4"
        app:showAsAction="always"
        android:title="Compose New Tweet"
        android:onClick="onComposeNewTweet">

    </item>


    <item android:id="@+id/action_search"
        android:orderInCategory="50"
        android:title="Search"
        android:icon="@android:drawable/ic_menu_search"
        app:showAsAction="always"
        app:actionViewClass="android.support.v7.widget.SearchView">

    </item>



</menu>